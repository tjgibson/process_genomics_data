# align_paired_bowtie2.sub

# set CHTC universe ----------------------------------------------------------------------
universe = vanilla

# set job requirements -------------------------------------------------------------------
Requirements = (Target.HasCHTCStaging == true)

# set output files -----------------------------------------------------------------------
log = align_paired_bowtie2_$(Cluster).log
error = align_paired_bowtie2_$(Cluster).err
output = align_paired_bowtie2_$(Cluster).out


# set executable and arguments ------------------------------------------------------------
executable = ./align_paired_bowtie2.sh
arguments =  "'$(r1)' '$(r2)' '$(in_dir)' '$(out_dir)' '$(bn)' '$(ref_dir)' '$(ref_genome)'"
transfer_input_files = /home/tjgibson2/programs/samtools, /home/tjgibson2/programs/bowtie2-2.3.5-linux-x86_64.tar.gz

# transfer output files ------------------------------------------------------------------
should_transfer_files = YES
when_to_transfer_output = ON_EXIT

# request resources ------------------------------------------------------------------------
request_cpus = 1
request_memory = 16GB
request_disk = 20GB


# queue job ------------------------------------------------------------------------------
queue